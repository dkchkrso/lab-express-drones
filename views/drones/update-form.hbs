<h2>Update the drone {{drone.name}}</h2>

<form action="/drones/{{drone._id}}/edit" method="post">
  <label> Drone Model:
    <input type="text" name="name" value="{{drone.name}}"/>
  </label>

  <label> Propellers:
    <input type="number" name="propellers" min="0" max="10" value="{{drone.propellers}}"/>
  </label>

  <label> maxSpeed:
    <input type="number" name="maxSpeed" min="1" max="100" value="{{drone.maxSpeed}}"/>
  </label>

  <button type="submit"> Create </button>
</form>
